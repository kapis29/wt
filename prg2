<h1>Fahrenheit to Celsius Converter</h1>
Enter Fahrenheit <input type="number" id="fah"><br><br>
Celsius Value <input type="number" id="cel" readonly><br><br><input type="submit" id="btn" value="CONVERT">
<script>
let bt=document.querySelector("#btn")
bt.addEventListener("click",function(){
let fa=document.getElementById("fah").value
let ce=(fa-32)*5/9
document.getElementById("cel").value = ce
})
</script>
